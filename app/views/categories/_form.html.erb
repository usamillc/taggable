<%= form_for(category) do |f| %>
  <div class="modal-body">
    <div class="form-group row">
      <%= f.label 'カテゴリ名', class: 'col-sm-3 col-form-label' %>
      <%= f.text_field :screenname, class: 'col-sm-8 form-control' %>
    </div>
    <div class="form-group row">
      <%= f.label '英表記', class: 'col-sm-3 col-form-label' %>
      <%= f.text_field :name, class: 'col-sm-8 form-control' %>
    </div>
    <div class="form-group row">
      <%= f.label '属性定義一覧へのリンク', class: 'col-sm-3 col-form-label' %>
      <%= f.text_field :def_link, class: 'col-sm-8 form-control' %>
    </div>
  </div>
  <div class="modal-footer">
    <%= hidden_field_tag(:show_hidden, show_hidden) %>
    <%= hidden_field_tag(:page, page) %>
    <%= f.submit submit_label, class: 'btn btn-primary' %>
  </div>
<% end %>
