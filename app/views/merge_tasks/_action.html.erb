<% if merge_task.status == 'not_started' %>
  <%= link_to '作業を開始する', merge_task_start_path(merge_task), class: "btn btn-primary" %>
<% elsif merge_task.status == 'in_progress' %>
  <% if merge_task.completable? %>
    <%= link_to '作業を完了する', merge_task_finish_path(merge_task), method: :put, class: "btn btn-success" %>
  <% end %>
<% else %>
  <%= link_to '作業を再開する', merge_task_start_path(merge_task), class: "btn btn-danger" %>
<% end %>
